@model SmartTaskTracker.Models.UserCreateViewModel
@{
    ViewData["Title"] = "Create User";
}
<div class="neon-panel" style="width:90%; max-width:600px; margin:2rem auto;">
    <h1 style="text-align:center; color:var(--neon-cyan); margin-bottom:1.5rem;">
        @ViewData["Title"]
    </h1>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" asp-items="ViewBag.Roles"></select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-futuristic">Save</button>
        <a asp-action="Index" class="btn-futuristic">Back</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
