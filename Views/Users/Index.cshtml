@model IEnumerable<SmartTaskTracker.Models.UserRoleViewModel>
@{
    ViewData["Title"] = "Users";
}
<h1 style="text-align:center; margin-top:2rem; color:var(--neon-cyan);">
    @ViewData["Title"]
</h1>
<div class="neon-panel" style="width:100%; padding:1rem; margin:2rem auto;">
    <a asp-action="Create" class="btn-futuristic">Add User</a>
</div>
<div class="neon-panel" style="width:100%; padding:1rem; overflow-x:auto;">
    <table class="table-futuristic" style="width:100%;">
        <thead>
            <tr>
                <th>User</th>
                <th>Role</th>
                <th style="width:30%;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.UserName</td>
                <td>@u.Role</td>
                <td style="white-space:nowrap;">
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn-futuristic">Edit</a>
                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn-futuristic">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
