@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole<int>>

@{
    ViewData["Title"] = "Назначение ролей";
}

<h1 class="neon-panel centered" style="max-width:600px;">@ViewData["Title"]</h1>

<div class="neon-panel" style="max-width:600px; margin:1rem auto;">
    <form asp-action="Create" method="post" style="display:flex; gap:1rem;">
        <input name="roleName"
               placeholder="Новое имя роли"
               class="form-control neon-input" />
        <button type="submit" class="btn-futuristic">Добавить</button>
    </form>
</div>

<div class="neon-panel" style="max-width:600px; margin:1rem auto; overflow-x:auto;">
    <table class="table-futuristic" style="width:100%;">
        <thead>
            <tr><th>Role Name</th></tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                </tr>
            }
            }
        </tbody>
    </table>
</div>
