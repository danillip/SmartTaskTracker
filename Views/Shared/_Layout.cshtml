<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – SmartTaskTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Шапка -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    SmartTaskTracker
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="Index">Events</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="TaskItems" asp-action="Index">Tasks</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item"><span class="navbar-text me-2">Привет, @User.Identity.Name!</span></li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Выход</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="btn btn-outline-light btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">Вход</a></li>
                            <li class="nav-item"><a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Регистрация</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Основной контент растягивается, с отступом снизу под фикс-футер -->
    <main class="flex-grow-1 pb-5">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Футер всегда внизу -->
    <footer class="bg-light text-center py-3 fixed-bottom">
        <div class="container">
            © 2025 – SmartTaskTracker
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
