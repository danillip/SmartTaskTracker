@model SmartTaskTracker.Models.TaskItem
@{
    ViewData["Title"] = "Report";
}
<h2>Report on Task</h2>
<form asp-action="Report" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Report" class="form-label"></label>
        <textarea asp-for="Report" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<SmartTaskTracker.Models.TaskStatus>()" class="form-select"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
