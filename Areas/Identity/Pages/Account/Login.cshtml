@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="neon-panel" style="width:90%; max-width:500px; margin:2rem auto; padding:2rem;">
    <h1 style="text-align:center; color:var(--neon-cyan); text-shadow:0 0 10px var(--neon-cyan); margin-bottom:1rem;">
        @ViewData["Title"]
    </h1>

    <section>
        <form id="account" method="post">
            <h2 style="color:#fff; margin-bottom:1rem;">Use a local account to log in.</h2>
            <hr style="border-color:rgba(0,255,255,0.2);" />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Username" class="form-label neon-glow"></label>
                <input asp-for="Input.Username" class="form-control neon-input" autocomplete="username" placeholder="username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label neon-glow"></label>
                <input asp-for="Input.Password" type="password" class="form-control neon-input" autocomplete="current-password" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check" style="margin-bottom:1.5rem;">
                <input asp-for="Input.RememberMe" class="form-check-input neon-checkbox" />
                <label asp-for="Input.RememberMe" class="form-check-label neon-glow">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="btn-futuristic btn-futuristic-lg" style="width:100%; margin-bottom:1rem;">
                Log in
            </button>

            <div style="display:flex; flex-direction:column; gap:0.5rem; color:var(--neon-cyan);">
                <a id="forgot-password" asp-page="./ForgotPassword" class="neon-link">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="neon-link">Register as a new user</a>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="neon-link">Resend email confirmation</a>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
