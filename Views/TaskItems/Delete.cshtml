@model SmartTaskTracker.Models.TaskItem

@{
    ViewData["Title"] = "Удалить задачу";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SmartTaskTracker</title>
    <link rel="stylesheet" href="~/css/futuristic.css" />
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div class="neon-panel">
        @if (User.IsInRole("Admin"))
        {
            <h3>Вы уверены, что хотите удалить эту задачу?</h3>

            <dl class="row">
                <dt class="col-sm-2">Название</dt>
                <dd class="col-sm-10">@Model.Title</dd>

                <dt class="col-sm-2">Дедлайн</dt>
                <dd class="col-sm-10">@Model.DeadlineUtc.ToString("g")</dd>

                <dt class="col-sm-2">Статус</dt>
                <dd class="col-sm-10">@Model.Status</dd>

                <dt class="col-sm-2">Исполнитель</dt>
                <dd class="col-sm-10">@Model.Executor.UserName</dd>

                <dt class="col-sm-2">Событие</dt>
                <dd class="col-sm-10">@Model.Event.Title</dd>
            </dl>

            <form asp-action="Delete" method="post" class="text-center">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn-futuristic">Удалить</button>
                <a asp-action="Index" class="btn-futuristic">Отмена</a>
            </form>
        }
        else
        {
            <p class="text-danger">У вас нет прав для удаления задач.</p>
        }
    </div>
</body>
</html>
