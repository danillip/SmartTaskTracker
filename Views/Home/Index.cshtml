@{
    ViewData["Title"] = "Главная";
}

<main>
    <div class="neon-panel centered">
        <h1>Добро пожаловать в SmartTaskTracker</h1>
        <p>Простая система учёта задач и событий.</p>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a asp-controller="TaskItems"
               asp-action="Create"
               class="btn-futuristic btn-futuristic-lg">
                Создать первую задачу
            </a>
        }
        else
        {
            <a asp-area="Identity"
               asp-page="/Account/Register"
               class="btn-futuristic btn-futuristic-lg me-3">
                Регистрация
            </a>
            <a asp-area="Identity"
               asp-page="/Account/Login"
               class="btn-futuristic btn-futuristic-lg">
                Войти
            </a>
        }
    </div>
</main>
