@model SmartTaskTracker.Models.Event

@{
    ViewData["Title"] = "Редактировать событие";
}

<div class="neon-panel" style="width:90%; max-width:600px; margin:2rem auto;">
    <h1 style="text-align:center; color:var(--neon-cyan); text-shadow:0 0 10px var(--neon-cyan); margin-bottom:1.5rem;">
        @ViewData["Title"]
    </h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartUtc" class="form-label"></label>
            <input asp-for="StartUtc" type="datetime-local" />
            <span asp-validation-for="StartUtc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndUtc" class="form-label"></label>
            <input asp-for="EndUtc" type="datetime-local" />
            <span asp-validation-for="EndUtc" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-futuristic">Сохранить</button>
        <a asp-action="Index" class="btn-futuristic">Отмена</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
