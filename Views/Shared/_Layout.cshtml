@using Microsoft.AspNetCore.Identity
@inject SignInManager<SmartTaskTracker.Models.AppUser> SignInManager
@inject UserManager<SmartTaskTracker.Models.AppUser> UserManager

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – SmartTaskTracker</title>
    <link rel="stylesheet" href="~/css/futuristic.css" />
</head>
<body>
    <!-- HEADER / NAV -->
    <header>
        <nav class="neon-panel" style="display:flex; justify-content:space-between; flex-wrap:wrap;">
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-futuristic">SmartTaskTracker</a>
                <text> | </text>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-futuristic">Home</a>
                <text> | </text>
                <a asp-area="" asp-controller="Events" asp-action="Index" class="btn-futuristic">Events</a>
                <text> | </text>
                <a asp-area="" asp-controller="TaskItems" asp-action="Index" class="btn-futuristic">Tasks</a>
                @* Показываем «Админка» только для Admin *@
                @if (User.IsInRole("Admin"))
                {
                    <text> | </text>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn-futuristic">Админка</a>
                }
            </div>
            <div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <span style="margin-right:1rem; color:var(--neon-cyan);">
                        Привет, @UserManager.GetUserName(User)!
                    </span>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" style="display:inline;">
                        <button type="submit" class="btn-futuristic">Выход</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn-futuristic">Вход</a>
                    <text> </text>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn-futuristic">Регистрация</a>
                }
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER (липкий) -->
    <footer class="neon-panel" style="text-align:center;">
        © 2025 – SmartTaskTracker
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
